<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#534c504b"
 android:layout_margin="15sp"
    android:dividerPadding="12dp"
    android:padding="20dp">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/mainIcon"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp">
        <TextView
            android:textColor="#920d1615"
android:textAllCaps="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/mainTitle"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#d5261005"
            android:gravity="center"
            android:id="@+id/mainDesc"
            android:text="Description"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#eb3d1212"
            android:gravity="center"
            android:id="@+id/mPouplation"
            android:text="Description"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#fb60280e"
            android:gravity="center"
            android:id="@+id/mCurrency"
            android:text="Description"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>